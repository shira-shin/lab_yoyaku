{
  "name": "lab_yoyaku-web",
  "private": true,
  "scripts": {
    "check:imports": "eslint --ext .ts,.tsx ./src --max-warnings=0 --rule 'import/no-unresolved:[\"error\",{\"ignore\":[\"server-only\"]}]'",
    "dev": "next dev",
    "prebuild:guard": "node -e \"require('child_process').execSync('pnpm exec tsx scripts/assert-endpoints-match.ts',{stdio:'inherit'})\"",
    "build": "pnpm run prebuild:guard && node -e \"const {execSync}=require('node:child_process'); const run=c=>execSync(c,{stdio:'inherit',shell:true}); run('pnpm exec tsx scripts/assert-env.ts'); run('prisma generate'); run('pnpm --workspace-root run migrate:deploy'); run('next build');\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "echo skip prisma generate on postinstall",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "db:migrate:status": "prisma migrate status",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:bootstrap": "pnpm run db:deploy || pnpm run db:push",
    "db:migrate:resolve-rolled": "prisma migrate resolve --rolled-back 202409160001_group_enhancements",
    "db:migrate:resolve-applied": "prisma migrate resolve --applied 202409160001_group_enhancements",
    "db:print-url": "node -e \"console.log(process.env.DATABASE_URL || '')\"",
    "db:push:direct": "pnpm exec tsx scripts/db-push-direct.ts"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "next": "14.1.0",
    "qrcode": "^1.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20.19.13",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.31",
    "prisma": "5.22.0",
    "tailwindcss": "^4.0.0",
    "tsx": "workspace:*",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": "20.x"
  }
}
